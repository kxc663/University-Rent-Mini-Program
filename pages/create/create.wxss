.createPage {
  position: fixed;
  left: 5vw;
  right: 5vw;
}

.space {
  border-top: 1rpx solid #ccc;
  margin: 3vh 0;
}

.selectButtonContainer {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: fixed;
  flex-wrap: wrap;
}

.selectButton {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

.plusIcon {
  font-size: 50rpx;
  color: #ccc;
}

.buttonText {
  font-size: 30rpx;
  color: #ccc;
}

.submitButton {
  position: fixed;
  height: 100rpx;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  background-color: #007aff;
  color: #fff;
  border: none;
  bottom: 5vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.imageContainer {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.image {
  width: 100%;
  height: 100%;
}