.create-page {
  margin: 0 50rpx;
}

.space {
  border-top: 1rpx solid #ccc;
  margin: 3vh 0;
}

.selectButton-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: fixed;
  flex-wrap: wrap;
}

.select-button {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

.plus-icon {
  font-size: 50rpx;
  color: #ccc;
}

.button-text {
  font-size: 30rpx;
  color: #ccc;
}

.submit-button {
  position: fixed;
  height: 100rpx;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  background-color: #007aff;
  color: #fff;
  border: none;
  bottom: 5vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.imageContainer {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.image {
  width: 100%;
  height: 100%;
}

.options-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  padding: 0 10px;
  background-color: #f2f2f2;
  border-radius: 20px;
}

.selected-option {
  font-size: 16px;
  color: #333;
  margin-right: 5px;
}

.arrow {
  width: 0;
  height: 0;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top: 6px solid #666;
}
