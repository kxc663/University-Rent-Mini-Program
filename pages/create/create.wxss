.createPage {
  position: fixed;
  left: 5vw;
  right: 5vw;
}

.space {
  border-top: 1px solid #ccc;
  margin: 3vh 0;
}
.selectButtonContainer {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position:fixed;
}

.selectButton {
  width: 60px;
  height: 60px;
  border: 1px dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.plusIcon {
  font-size: 24px;
  color: #ccc;
}

.buttonText {
  font-size: 12px;
  color: #ccc;
}

.submitButton {
  position: fixed;
  height: 10vh;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  background-color: #007aff;
  color: #fff;
  border: none;
  bottom: 5vh;
}