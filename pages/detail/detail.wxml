<view class="detail-page">
  <view class="page-top-container">
    <view class="username-container" style="flex-grow: 1;">
      <text class="post-username">{{post.username}}</text>
    </view>
    <view class="button-container">
      <button class="follow-button" bindtap="clickFollow">+</button>
      <button class="message-button" bindtap="clickMessage">私</button>
      <button class="collect-button" bindtap="clickCollect" style="background-color: {{ isPostCollected ? '#FFA500' : '#FFFFFF' }}">收</button>
    </view>
  </view>
  <text>\n</text>
  <text class="post-title">{{post.title}}</text>
  <text>\n</text>
  <text class="post-detail-text">{{post.detail}}</text>
</view>