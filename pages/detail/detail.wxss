.detail-page {
  padding: 25rpx;
}

.page-top-container{
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  top: 0;
  z-index: 1;
  background-color: #fff;
}

.button-container {
  display: flex;
  gap: 10rpx;
}

.follow-button, .copy-button, .collect-button, .delete-button {
  width: 85rpx;
  font-size: 30rpx;
  background-color: #FFFFFF;
}

.post-title {
  font-size: larger;
  font-weight: bold;
}

.post-detail-text {
  font-size: medium;
}

.post-username {
  font-size: small;
  color: #ccc;
}

.post-images {
  width: 600rpx;
  height: 600rpx;
  margin-right: 10rpx;
  margin-top: -50rpx;
}

.image {
  width: 100%;
  height: 100%;
}

.comment-container {
  background-color: #f7f7f7;
  padding: 10px;
  border-radius: 5px;
}

.comment-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.comment-list {
  margin-bottom: 10px;
}

.comment-item {
  margin-bottom: 10px;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
}

.comment-username {
  font-weight: bold;
  margin-bottom: 5px;
}

.comment-content {
  margin-bottom: 5px;
}

.empty-message {
  color: #999;
  text-align: center;
  margin-top: 10px;
}

.comment-input-container {
  margin-top: 10px;
}

.comment-input {
  width: 100%;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.comment-submit {
  margin-top: 5px;
  background-color: #001aff;
  color: #fff;
  padding: 5px 10px;
  border: none;
  border-radius: 5px;
}
