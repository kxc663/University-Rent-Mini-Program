.detail-page {
  padding: 25rpx;
}

.page-top-container{
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  top: 0;
  z-index: 1;
  background-color: #fff;
}

.button-container {
  display: flex;
  gap: 10rpx;
}

.follow-button, .message-button, .collect-button, .delete-button {
  width: 85rpx;
  font-size: 30rpx;
  background-color: #FFFFFF;
}

.post-title {
  font-size: larger;
  font-weight: bold;
}

.post-detail-text {
  font-size: medium;
}

.post-username {
  font-size: small;
  color: #ccc;
}

.post-images {
  width: 600rpx;
  height: 600rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.image {
  width: 100%;
  height: 100%;
}