<view class="home-page-tabs">
  <t-tabs defaultValue="{{0}}" bind:change="onHigerTabsChange" bind:click="onHigerTabsClick" t-class="custom-tabs">
    <t-tab-panel label="最新动态" value="0" />
    <t-tab-panel label="房屋转租" value="1" />
  </t-tabs>
  <view class="welcome" style="text-align: center;">
    <block wx:if="{{isLogged}}">
      <text class="welcome-text">欢迎用户：{{username}}</text>
    </block>
    <block wx:else>
      <text class="welcome-text">请先登录</text>
    </block>
  </view>
  <view class="posts" style="padding-left: 50rpx;">
    <text>\n</text>
    <block wx:for="{{posts}}" wx:key="index">
      <view class="post-item" bindtap="viewPostDetail" data-post-id="{{index}}">
        <text style="font-size: larger; font-weight: bold;">{{item.title}}</text>
        <text>\n</text>
        <text style="font-size: medium;">{{item.detail}}</text>
        <text>\n</text>
        <view class="post-images" wx:for='{{item.images}}' wx:for-item="item" wx:key="index">
          <image class="image" src="{{'cloud://cloud1-3gm1islrf702afb9.636c-cloud1-3gm1islrf702afb9-1318853138/imageUpload/' + item + '.png'}}" mode="aspectFit"></image>
        </view>
        <text>\n</text>
        <text style="font-size: small; color: #ccc;">{{item.username}}</text>
        <view class="space"></view>
        <text>\n</text>
      </view>
    </block>
  </view>

  <view class="float-button-container">
    <view class="float-button" bindtap="floatButtonClicked">
      <text class="float-button-text">+</text>
    </view>
  </view>
