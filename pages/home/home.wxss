.float-button {
  position: fixed;
  bottom: 5vh;
  right: 5vw;
  width: 120rpx;
  height: 120rpx;
  background-color: #001aff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.float-button-text {
  color: #ffffff;
  font-size: 70rpx;
}

.space {
  border-top: 1rpx solid #ccc;
  margin: 3vh 0;
}

.post-images {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.image {
  width: 100%;
  height: 100%;
}