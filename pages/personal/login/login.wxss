.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.form {
  width: 70vw;
}

.input {
  width: 100%;
  height: 70rpx;
  font-size: large;
  margin-bottom: 20rpx;
  border: 1rpx solid #ccc;
}

.login-button, .register-button {
  width: 100%;
  height: 100rpx;
  padding: 10rpx;
  margin-top: 2vh;
  background-color: #007aff;
  color: #fff;
  border: none;
  display: flex;
  align-items: center; 
  justify-content: center;
}