.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.form {
  width: 70vw;
}

.input {
  width: 100%;
  height: 8vh;
  font-size: large;
  margin-bottom: 10px;
  border: 1px solid #ccc;
}

.login-button {
  width: 100%;
  height: 10vh;
  padding: 10px;
  background-color: #007aff;
  color: #fff;
  border: none;
  display: flex;
  align-items: center; 
  justify-content: center;
}

.register-button {
  width: 100%;
  height: 10vh;
  padding: 10px;
  margin-top: 2vh;
  background-color: #007aff;
  color: #fff;
  border: none;
  display: flex;
  align-items: center; 
  justify-content: center;
}
