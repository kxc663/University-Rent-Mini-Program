.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.form {
  width: 80vw;
}

.username-input-container {
  display: flex;
  align-items: center;
}

.username-input {
  flex: 1; 
}

.username-input, .password-input {
  width: 100%;
  height: 70rpx;
  font-size: large;
  margin-bottom: 20rpx;
  border: 1rpx solid #ccc;
}

.register-button {
  width: 100%;
  height: 100rpx;
  padding: 10rpx;
  margin-top: 2vh;
  background-color: #007aff;
  color: #fff;
  border: none;
  display: flex;
  align-items: center; 
  justify-content: center;
}

.options-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  margin-bottom: 20rpx;
  background-color: #f2f2f2;
  border-radius: 20px;
  font-size: medium;
}

.arrow {
  width: 0;
  height: 0;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top: 6px solid #666;
}